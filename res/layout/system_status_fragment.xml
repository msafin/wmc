<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp">
    
    <RelativeLayout
        android:id="@+id/memory_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        
       	<TextView
	        android:id="@+id/memory"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:background="#333333"
	        android:textColor="#FFFFFF"
	        android:text="@string/memory" />
       	<TextView
	        android:id="@+id/memory_total"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/memory"
	        android:layout_marginTop="5dp"
	        android:layout_marginLeft="5dp"
	        android:textColor="#000000"
	        android:text="" />
       	<TextView
	        android:id="@+id/memory_free"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/memory_total"
	        android:layout_alignLeft="@+id/memory_total"
	        android:text="" />
    </RelativeLayout>
    
    <!-- wan -->
    <RelativeLayout
        android:id="@+id/wan_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/memory_group"
        android:layout_marginTop="10dp">
        
	    <TextView
	        android:id="@+id/wan"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:background="#333333"
	        android:textColor="#FFFFFF"
	        android:text="Wan" />
    	<TextView
	        android:id="@+id/wan_ip"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/wan"
	        android:layout_marginTop="5dp"
	        android:layout_marginLeft="5dp"
	        android:textColor="#000000"
	        android:text="" />
       	<TextView
	        android:id="@+id/wan_mac"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/wan_ip"
	        android:layout_alignLeft="@+id/wan_ip"
	        android:text="" />
    </RelativeLayout>
    
    <!-- lan -->
    <RelativeLayout
        android:id="@+id/lan_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wan_status"
        android:layout_marginTop="20dp">
        
	    <TextView
	        android:id="@+id/lan"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:background="#333333"
	        android:textColor="#FFFFFF"
	        android:text="Lan" />
    	<TextView
	        android:id="@+id/lan_ip"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/lan"
	        android:layout_marginTop="5dp"
	        android:layout_marginLeft="5dp"
	        android:textColor="#000000"
	        android:text="" />
       	<TextView
	        android:id="@+id/lan_mac"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/lan_ip"
	        android:layout_alignLeft="@+id/lan_ip"
	        android:text="" />
        
    </RelativeLayout>
    
    <!-- wifi -->
    <RelativeLayout
        android:id="@+id/wifi_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/lan_status">
        
       	<TextView
	        android:id="@+id/wifi"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:background="#333333"
	        android:textColor="#FFFFFF"
	        android:text="WIFI" />
       	<TextView
	        android:id="@+id/ssid"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/wifi"
	        android:layout_marginTop="5dp"
	        android:layout_marginLeft="5dp"
	        android:textColor="#000000"
	        android:text="" />
       	<TextView
	        android:id="@+id/wifi_mac"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/ssid"
	        android:layout_alignLeft="@+id/ssid"
	        android:text="" />  
    </RelativeLayout>
    
</RelativeLayout>
</ScrollView>